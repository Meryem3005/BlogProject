@model List<Models.BlogVM>

@{
	ViewData["Title"] = "Liste des Blogs";
}
<style>
	body {
		background-color: lightgray;
	}
</style>
<a asp-controller="Blog" asp-action="Create" class="btn btn-primary" style="margin-bottom:20px">Ajouter Blog</a>
@foreach (var item in Model)
{
	<div class="card" style="margin-bottom:30px;">
		
		<div class="card-body">
			<a asp-action="Detail" asp-route-id="@item.Id" style="text-decoration:none;color:black;"><h5 class="card-title">@item.Name</h5></a>
			<p class="card-text">@item.Content</p>
			<a asp-action="Update" asp-controller="Blog" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
			<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary" style="background-color:red">Delete</a>
		</div>
	</div>

}

