
@{
    
	ViewData["Title"] = "Categories";
}

<section class="category_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Categories de Blogs
            </h2>
        </div>
        <div class="category_container" style="left:auto; right:auto;">
            @foreach(var item in Model)
            {
                <a asp-action="Index" asp-controller="Blog" asp-route-id="@item.Id" style="text-decoration:none; color:white;">
                <div class="box">
                    <div class="img-box">
                        <img src="images/c1.png" alt="">
                    </div>
                    <div class="detail-box">
                         <h5 >@item.Name</h5>
                         <p >@item.Description</p>
                    </div>
                </div>
                </a>
            }
        </div>
    </div>
</section>

